<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFE"
    android:orientation="vertical"
    tools:context=".Activity2">

    <ImageView
        android:id="@+id/imageView_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/contentDescription_header"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/headerdesign" />

    <TextView
        android:id="@+id/textView_UeberschriftSeite2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView_header"
        android:layout_alignParentStart="true"
        android:background="#CCB0CD90"
        android:fontFamily="sans-serif-condensed-light"
        android:foregroundGravity="clip_horizontal|center"
        android:gravity="center"
        android:text="@string/label_ueberschriftSeite2"
        android:textColor="#414B37"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView_nameAnzeige"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_UeberschriftSeite2"
        android:layout_alignParentStart="false"
        android:background="#FFFFFE"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center|center_horizontal"
        android:textColor="#414B37"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_verbrauchAnzeige"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_nameAnzeige"
        android:layout_alignParentStart="true"
        android:background="#FFFFFE"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center|center_horizontal"
        android:textColor="#414B37"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView_streckeAnzeige"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_verbrauchAnzeige"
        android:background="#FFFFFE"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center|center_horizontal"
        android:textColor="#414B37"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView_ergebnis1Titel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_streckeAnzeige"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:background="#99B0CD90"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center|center_horizontal"
        android:text="@string/label_textview_ergebnisSpezifischUeberschrift"
        android:textColor="#414B37"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_ergebnis1Anzeige"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_ergebnis1Titel"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-2dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center|center_horizontal"
        android:textColor="#414B37"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView_ergebnis2Titel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_ergebnis1Anzeige"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="14dp"
        android:background="#4DB0CD90"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center|center_horizontal"
        android:text="@string/label_textview_ergebnisAbsolutUeberschrift"
        android:textAllCaps="false"
        android:textColor="#414B37"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_ergebnis2Anzeige"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_ergebnis2Titel"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center|center_horizontal"
        android:textColor="#414B37"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button_InfoSeite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@id/button_database"
        android:background="@drawable/hgu"
        android:fontFamily="sans-serif-condensed-light"
        android:text="@string/label_button_info" />

    <Button
        android:id="@+id/button_BaumAnzeige"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_database"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/hgu"
        android:fontFamily="sans-serif-condensed-light"
        android:text="@string/label_button_baumanzeige" />

    <Button
        android:id="@+id/button_database"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:background="@drawable/hgu"
        android:fontFamily="sans-serif-condensed-light"
        android:text="@string/label_button_datenbank" />

</RelativeLayout>