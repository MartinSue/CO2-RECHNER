<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    android:orientation="vertical"
    tools:context=".Activity3">

    <TextView
        android:id="@+id/TextView_ueberschrift_hilfe"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#1E453B"
        android:fontFamily="sans-serif-condensed-light"
        android:foregroundGravity="center_vertical|clip_horizontal|center"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/label_button_hilfe"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView_infotext"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_below="@id/TextView_ueberschrift_hilfe"
        android:layout_marginTop="15dp"

        android:layout_toRightOf="@id/imageView_baum"
        android:text="@string/label_textView_infotext" />

    <ImageView
        android:id="@+id/imageView_baum"
        android:layout_width="198dp"
        android:layout_height="228dp"
        android:layout_below="@id/TextView_ueberschrift_hilfe"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/baum" />

</RelativeLayout>

