<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity3">

    <ImageView
        android:id="@+id/imageView_Header3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/contentDescription_header"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/headerdesign" />

    <TextView
        android:id="@+id/TextView_ueberschrift_hilfe"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/imageView_Header3"
        android:background="#59B0CD90"
        android:fontFamily="sans-serif-condensed-light"
        android:foregroundGravity="center_vertical|clip_horizontal|center"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/label_button_hilfe"
        android:textColor="#323B2A"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView_infotext"
        android:layout_width="match_parent"
        android:layout_height="272dp"
        android:layout_below="@id/TextView_ueberschrift_hilfe"

        android:layout_alignParentRight="false"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="@string/label_textView_infotext"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView_baum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_infotext"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/baum" />

    <Button
        android:id="@+id/button_WebseiteFormel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true"
        android:background="@drawable/hgu"
        android:fontFamily="sans-serif-condensed-light"
        android:text="@string/label_button_formel" />

    <Button
        android:id="@+id/button_WebseiteBaum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/hgu"
        android:fontFamily="sans-serif-condensed-light"
        android:text="@string/label_button_baum" />
</RelativeLayout>

